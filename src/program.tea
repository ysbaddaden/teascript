scopes = require('./scopes')

prototype Program
  def constructor(body)
    self.body = body
  end

  def compile(options = {})
    body = scopes.run -> {
      return self.body.compile(scope: true)
    }
    return '(function () {' + body + '}());' if options.scoped
    return 'function (require, module, exports) {' + body + '});' if options.amd
    return body
  end
end

module.exports = Program
